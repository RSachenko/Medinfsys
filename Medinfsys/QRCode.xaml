<Window x:Class="Medinfsys.QRCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medinfsys"
        mc:Ignorable="d"
        Title="QRCode" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,10,0,0">
            <Button x:Name="ScanQR" Content="Сканировать QR" Click="ScanQR_Click" Width="254"/>
            <Image x:Name="ImgQR" Width="500" Height="214"/>
            <Label Content="Введите индефекационный код:" Width="676"/>
            <TextBox x:Name="EnterCode" Width="677"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Height="30">
                <Button x:Name="Gen" Content="Сгенерировать" Click="Gen_Click" Margin="0,0,150,0"/>
                <Button x:Name="Save" Content="Сохранить" Click="Save_Click" Height="28" Width="67"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
