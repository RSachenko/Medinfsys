<Window x:Class="Medinfsys.ScanQrCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Medinfsys"
        mc:Ignorable="d"
        Title="ScanQrCode" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="0,10,0,0">
            <Image x:Name="ImgQR" Width="500" Height="214"/>
            <Button x:Name="Scan" Content="Открыть" HorizontalAlignment="Center" Margin="0,10,0,0" Click="Scan_Click"/>
        </StackPanel>
    </Grid>
</Window>
